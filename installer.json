{
    "paths": {
        "excludes": [
            "~$",
            "\\.log$",
            "\\.conf$",
            "^\\.",
            "release",
            "tests",
            "installer\\.json",
            "__pycache__"
        ],
        "executables": ["glader.py"],
        "toplevel": "glader",
        "recurse": true
    },
    "commands": [
        {
            "name": "install_deps",
            "command": ["bash", "install_deps.sh"],
            "command_user": ["bash", "install_deps.sh", "--user"]
        }
    ],
    "cleanup_dirs": ["~/.config/glader"]
}
